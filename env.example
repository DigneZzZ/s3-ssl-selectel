# Selectel Cloud Configuration
SELECTEL_USERNAME=your_selectel_username # for service account
SELECTEL_PASSWORD=your_selectel_password_here # for service account
SELECTEL_ACCOUNT_ID=123456 # MAIN ACCOUNT
SELECTEL_PROJECT_ID=your-selectel-project-id-here
SELECTEL_AUTH_URL=https://cloud.api.selcloud.ru/identity/v3/auth/tokens
SELECTEL_STORAGE_API_URL=https://api.ru-1.storage.selcloud.ru

# Selectel Object Storage Settings
SELECTEL_CONTAINER_NAME=your-selectel-container
SELECTEL_CERT_NAME=ssl
SELECTEL_CURRENT_CERT_ID=your-current-cert-id-from-selectel

# SSL Certificate Domain (paths will be generated automatically based on this domain)
DOMAIN=yourdomain.com
# WILDCARD_DOMAIN=*.yourdomain.com  # Optional: leave empty or comment out if wildcard not needed

# ACME.sh Base Path (domain-specific paths are auto-generated)
ACME_SCRIPT_PATH=/root/.acme.sh/acme.sh

# Telegram Notifications
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789
TELEGRAM_SEND_SUCCESS=true
TELEGRAM_SEND_ERRORS=true
TELEGRAM_SEND_LOGS=true

# Logging
LOG_FILE=/var/log/ssl-cert-renewal.log
LOG_LEVEL=INFO